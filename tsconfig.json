{
  "compilerOptions": {
      "outDir": "lib",
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "declaration": true,
      "jsx": "react",
      "lib": ["es6", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
